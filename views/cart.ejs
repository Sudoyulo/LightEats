<!DOCTYPE html>
<html lang="en">

<head>
  <title>Your Cart</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <link rel="stylesheet" href="/styles/header.css" type="text/css" />
  <link rel="stylesheet" href="/styles/footer.css" type="text/css" />
  <link rel="stylesheet" href="/styles/cart.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/quantity.js"></script>
</head>

<body>
  <%- include('partials/_header') %>
  <div id = "between-head-foot" >
    <form method="POST" action ="/orders" >
      <div id = "cart-box">
      <h2>Shopping cart: </h2>

          <% cart.items.forEach((item, i) => { %>

        <div class = "cart-box-item">
          <img src = <%= item.img %> alt="img" >

          <div id = "name-and-ppi">
            <p class = "p-desc cart-item"><%= item.name %></p>
            <div class="dollar-price-each">
              <p class = "small-text">$</p>
              <p class = "ppi cart-price"> <%= (item.price / 100).toFixed(2) %></p>
              <p class = "small-text">&nbsp; each</p>
            </div>
          </div>

          <div class = "cart-quantity-box">
            <input class ="item-id" name = "id-<%= i %>" value = "<%=item.id %>" type="hidden">
              <button type="button" class="opt-btn" data-type="minus"> -</button>
              &nbsp;
              <input name = "number-<%= i %>" type="text" class="qty-box" value=<%= item.number %> >
              &nbsp;
              <button type="button" class="opt-btn" data-type="plus">+</button>
          </div>
          <div class = "price" >
            <p class = "p-desc">$</p>
            <p class = "iprice p-desc" ><%= (item.number  * item.price / 100).toFixed(2) %></p>
          </div>
        </div>
      <% }) %>

      <hr>
      <div id = "cart-order-total">
        <p class = "b-desc">Sub-Total: $</p>

        <p id ="subtotal" class = "b-desc"> 10</p>
      </div>
      <div id = "cart-box-footer">
        <button id = "button-set-add-more" type="button"> Add more </button>
        <button id = "button-set-order-time" type="submit"> Order </button>
      </div>
      </div>
    </form>
  </div>

  <!-- <%- include('partials/_footer') %> -->
</body>

</html>

